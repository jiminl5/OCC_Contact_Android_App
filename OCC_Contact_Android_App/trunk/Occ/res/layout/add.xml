<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width ="fill_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background= "@drawable/bg2transparent">

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/addImage"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/addImage"
        android:text="Name:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_toRightOf="@+id/addImage"
        android:text="Email:" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:ems="10" >
    </EditText>

    <Button
        android:id="@+id/btAddSchedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editNumber"
        android:text="Add Everything"
        android:layout_marginTop="12dp" />
    
    <TableLayout
        android:layout_below="@+id/btAddSchedule"
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="75dp"
                android:text="Class" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="Days" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editClass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editTime"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editClass1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editDays1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editTime1"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editClass2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editDays2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editTime2"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editClass3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editDays3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:selectAllOnFocus="true"
                android:id="@+id/editTime3"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEmail"
        android:layout_toRightOf="@+id/addImage"
        android:text="Phone#:" />
    <EditText
        android:inputType="number"
        android:id="@+id/editNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:ems="10" >
    </EditText>

    <ImageButton
        android:id="@+id/addImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
</ScrollView>